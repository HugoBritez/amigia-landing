---
// Hero Section - Híbrido moderno con screenshots reales
import ChatImg from '../assets/Chat.png';
import InicioImg from '../assets/Inicio.png';
import HistoriasImg from '../assets/Historias.png';
import ReflexionesImg from '../assets/Reflexiones-1.png';
import MomentosImg from '../assets/Momentos-Amigia.png';
import { Image } from 'astro:assets';
---

<section id="hero" class="relative min-h-screen flex items-center py-20 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">

      <!-- Columna izquierda: Contenido -->
      <div class="space-y-8 text-center lg:text-left">

        <!-- Headline -->
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
          Tu espacio seguro para el
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#3bb3c3] to-[#FF6B6B]">
            bienestar emocional
          </span>
        </h1>

        <!-- Subheadline -->
        <p class="text-lg sm:text-xl text-gray-600 leading-relaxed max-w-xl mx-auto lg:mx-0">
          Conversaciones empáticas con IA, evaluación psicológica validada (DASS-21) y seguimiento personalizado.
          <strong class="text-gray-900">Disponible 24/7. Completamente gratis.</strong>
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-3 justify-center lg:justify-start">
          <a
            href="#descargar"
            class="inline-flex items-center justify-center gap-2 px-6 py-3.5 text-base font-semibold text-white bg-gradient-to-r from-[#3bb3c3] to-[#FF6B6B] rounded-lg hover:opacity-90 transition-opacity shadow-lg shadow-[#3bb3c3]/20"
          >
            Descargar AmigIA
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
            </svg>
          </a>
          <a
            href="#features"
            class="inline-flex items-center justify-center px-6 py-3.5 text-base font-semibold text-gray-700 bg-white border-2 border-gray-200 rounded-lg hover:bg-gray-50 transition-colors"
          >
            Conocer más
          </a>
        </div>

        <!-- Trust badges -->
        <div class="flex flex-wrap items-center justify-center lg:justify-start gap-6 pt-4 text-sm text-gray-600">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#3bb3c3]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <span>100% privado</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#3bb3c3]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Test validado</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#3bb3c3]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>24/7 disponible</span>
          </div>
        </div>
      </div>

      <!-- Columna derecha: Screenshots controlados -->
      <div class="relative hidden lg:flex justify-center items-center min-h-[600px]">
        <!-- Container más pequeño -->
        <div class="relative w-64">
          <!-- Screenshot principal más pequeño -->
          <div class="rounded-3xl overflow-hidden shadow-2xl border-4 border-gray-900 bg-gray-900">
            <Image
              src={ChatImg}
              alt="Chat empático de AmigIA"
              class="w-full h-auto"
              widths={[250, 300]}
              sizes="256px"
            />
          </div>

          <!-- Screenshots flotantes - más y mejor distribuidos -->
          <!-- Top left -->
          <div class="absolute -left-12 top-8 w-20 rounded-xl overflow-hidden shadow-xl border-2 border-white rotate-[-8deg] hover:rotate-[-4deg] transition-transform">
            <Image
              src={InicioImg}
              alt="Inicio de AmigIA"
              class="w-full h-auto"
              widths={[80, 100]}
              sizes="80px"
            />
          </div>

          <!-- Top right -->
          <div class="absolute -right-12 top-16 w-20 rounded-xl overflow-hidden shadow-xl border-2 border-white rotate-[10deg] hover:rotate-[6deg] transition-transform">
            <Image
              src={ReflexionesImg}
              alt="Reflexiones en AmigIA"
              class="w-full h-auto"
              widths={[80, 100]}
              sizes="80px"
            />
          </div>

          <!-- Bottom left -->
          <div class="absolute -left-10 bottom-20 w-20 rounded-xl overflow-hidden shadow-xl border-2 border-white rotate-[6deg] hover:rotate-[3deg] transition-transform">
            <Image
              src={MomentosImg}
              alt="Momentos AmigIA"
              class="w-full h-auto"
              widths={[80, 100]}
              sizes="80px"
            />
          </div>

          <!-- Bottom right -->
          <div class="absolute -right-10 bottom-12 w-20 rounded-xl overflow-hidden shadow-xl border-2 border-white rotate-[-10deg] hover:rotate-[-6deg] transition-transform">
            <Image
              src={HistoriasImg}
              alt="Historias en AmigIA"
              class="w-full h-auto"
              widths={[80, 100]}
              sizes="80px"
            />
          </div>
        </div>

        <!-- Decoración de fondo -->
        <div class="absolute -top-10 -right-10 w-72 h-72 bg-[#3bb3c3]/10 rounded-full blur-3xl -z-10"></div>
        <div class="absolute -bottom-10 -left-10 w-72 h-72 bg-[#FF6B6B]/10 rounded-full blur-3xl -z-10"></div>
      </div>

    </div>
  </div>
</section>
